@model List<LMS.ViewModels.TransactionViewModel>

@{
    ViewData["Title"] = "Records";
}


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>

<style>
    /* Align dropdown and search box in same row */
    .dataTables_wrapper .dataTables_length, .dataTables_wrapper .dataTables_filter{
        display: inline-block;
        margin-bottom: 10px;
    }

    .dataTables_wrapper .dataTables_filter {
        float: right;
    }

    /* Clean up pagination buttons */
    .dataTables_wrapper .dataTables_paginate .paginate_button {
        /* padding: 4px 10px; */
        margin: 0 2px;
        border: 1px solid #dee2e6;
        border-radius: 4px;
        background-color: #f8f9fa;
        color: #212529;
        transition: background-color 0.2s;
    }

    .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
        background-color: #e2e6ea;
        color: #212529;
    }

        .dataTables_wrapper .dataTables_paginate .paginate_button.current {
            background-color: #0d6efd;
            color: white !important;
            border: none;
        }

            .dataTables_wrapper .dataTables_paginate .paginate_button.current:hover {
                background-color: #0b5ed7;
            }
</style>

<a onclick="history.back()" class="btn btn-outline-secondary mb-3">
    <i class="bi bi-arrow-left"></i> Back
</a>

<h3 class="text-center mb-4">Issued and Returned Book Records</h3>

<table id="recordsTable" class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Book Title</th>
            <th>Issued By</th>
            <th>Issued Date & Time</th>
            <th>Returned Date & Time</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var record in Model)
        {
            <tr>
                <td>@record.BookTitle</td>
                <td>@record.MemberName</td>
                <td>@record.IssuedDate.ToString("dd/MM/yyyy | hh:mm tt")</td>
                <td>@record.ReturnedDate?.ToString("dd-MM-yyyy | hh:mm tt")</td>

            </tr>
        }
    </tbody>

</table>

<script>
    $(document).ready(function () {
        $('#recordsTable').DataTable();
    });
</script>
