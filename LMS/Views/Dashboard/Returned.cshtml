@model List<LMS.Models.ReturnedBook>

@{
    ViewData["Title"] = "Returned Books";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>

<h2>Returned Books</h2>

<table id="DataTables_Table_0" class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Issued Date</th>
            <th>Returned Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@(book.Book != null ? book.Book.Title : "N/A")</td>
                <td>@book.IssuedDate.ToString("dd/MM/yyyy | hh:mm tt")</td>
                <td>@(book.ReturnedDate.HasValue? book.ReturnedDate.Value.ToString("dd/MM/yyyy | hh:mm tt") : "N/A")</td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#DataTables_Table_0').DataTable();
    });
</script>