@model List<LMS.Models.Book>

@{
    ViewData["Title"] = "Member Dashboard";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";

    // Get issued book IDs from ViewBag
    var issuedBookIds = ViewBag.IssuedBookIds as List<int> ?? new List<int>();
    
}

